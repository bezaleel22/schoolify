# Laravel Environment Configuration
APP_NAME="Schoolify"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-school-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=schoolify
DB_USERNAME=schoolify_user
DB_PASSWORD=

# Redis Configuration (for caching and sessions)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-school-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Website Module Configuration
WEBSITE_ENABLED=true
WEBSITE_THEME=default
WEBSITE_CACHE_ENABLED=true
WEBSITE_CACHE_TTL=3600

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Google Services
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_USERNAME=your-twitter-handle
INSTAGRAM_USERNAME=your-instagram-handle
YOUTUBE_CHANNEL_ID=your-youtube-channel-id

# SEO Configuration
SEO_DEFAULT_TITLE="Modern School Website"
SEO_DEFAULT_DESCRIPTION="Welcome to our modern educational institution"
SEO_DEFAULT_KEYWORDS="school,education,learning,students,academics"
SEO_SITE_NAME="${APP_NAME}"
SEO_TWITTER_SITE="@your-twitter-handle"

# Image Optimization
IMAGE_DRIVER=gd
IMAGE_CACHE_ENABLED=true
IMAGE_WEBP_ENABLED=true
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# Newsletter Configuration
NEWSLETTER_PROVIDER=mailchimp
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID="${GOOGLE_ANALYTICS_ID}"

# Performance Configuration
CDN_URL=
ASSET_VERSION=1.0.0
ENABLE_GZIP=true
ENABLE_BROWSER_CACHE=true

# Security Configuration
CSP_ENABLED=true
FORCE_HTTPS=true
HSTS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_NOTIFICATIONS_SLACK_WEBHOOK_URL=
BACKUP_NOTIFICATIONS_MAIL_TO=admin@your-school-domain.com

# AWS S3 Configuration (for file storage and backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting Configuration
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Website Specific Configuration
WEBSITE_CONTACT_EMAIL=contact@your-school-domain.com
WEBSITE_CONTACT_PHONE="+1-555-123-4567"
WEBSITE_ADDRESS="123 School Street, Education City, EC 12345"
WEBSITE_OFFICE_HOURS="Monday-Friday: 8:00 AM - 5:00 PM"

# Blog Configuration
BLOG_ENABLED=true
BLOG_POSTS_PER_PAGE=10
BLOG_COMMENTS_ENABLED=true
BLOG_COMMENT_MODERATION=true

# Events Configuration
EVENTS_ENABLED=true
EVENTS_CALENDAR_VIEW=true
EVENTS_REGISTRATION_ENABLED=true

# Gallery Configuration
GALLERY_ENABLED=true
GALLERY_IMAGES_PER_PAGE=12
GALLERY_WATERMARK_ENABLED=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=your-maintenance-secret-key